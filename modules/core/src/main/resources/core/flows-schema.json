{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Flow configuration",
  "type": "object",
  "properties": {
    "name": {
      "propertyOrder": 10,
      "title": "Name",
      "type": "string"
    },
    "sourceGateName": {
      "propertyOrder": 20,
      "title": "Gate name or full address",
      "type": "string"
    },
    "pipeline": {
      "propertyOrder": 50,
      "title": "Pipeline configuration",
      "type": "array",
      "format": "tabs",
      "items": {
        "title": "Instruction",
        "headerTemplate": "{{i}} - {{self.class}}: {{self.name}}",
        "oneOf": [
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "sourceGateName",
    "pipeline"
  ],
  "definitions": {
    "simpleCondition": {
      "type": "string",
      "title": "Simple condition"
    }
  }
}